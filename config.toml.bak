baseURL = 'http://example.org/'
defaultContentLanguage = "en"
languageCode = 'en'
hasCJKLanguage = true
title = 'wlupus'
theme = 'FixIt'
enableGitInfo = true
enableEmoji = true

[frontmatter]
    lastmod = [":git", "lastmod", ":fileModTime", ":default"]


[languages]
    [languages.en]
        weight = 1
        languageCode = "en"
        languageName = "English"
        hasCJKLanguage = true
        paginate = 12
        # copyright = "This work is licensed under a Creative Commons Attribution-NonCommercial 4.0 International License."

        [languages.en.menu]
            [[languages.en.menu.main]]
                identifier = "posts"
                parent = ""
                pre = "<i class='fas fa-archive fa-fw fa-sm'></i>"
                post = ""
                name = "Posts"
                url = "/posts/"
                # title will be shown when you hover on this menu link
                title = "Posts"
                weight = 1
            [[languages.en.menu.main]]
                identifier = "categories"
                pre = "<i class='fas fa-th fa-fw fa-sm'></i>"
                post = ""
                name = "Categories"
                url = "/categories/"
                title = "Categories"
                weight = 2
            [[languages.en.menu.main]]
                identifier = "tags"
                pre = "<i class='fas fa-tags fa-fw fa-sm'></i>"
                post = ""
                name = "Tags"
                url = "/tags/"
                title = "Tags"
                weight = 3
            [[languages.en.menu.main]]
                identifier = "friends"
                pre = "<i class='fas fa-users fa-fw fa-sm'></i>"
                post = ""
                name = "Friends"
                url = "/friends/"
                title = "Friends"
                weight = 4
            [[languages.en.menu.main]]
                identifier = "about"
                pre = "<i class='fas fa-info-circle fa-fw fa-sm'></i>"
                post = ""
                name = "About"
                url = "/about/"
                title = ""
                weight = 5
            [[languages.en.menu.main]]
                identifier = "github"
                pre = "<i class='fab fa-github fa-fw'></i>"
                post = ""
                name = ""
                url = "https://github.com/wlupus/blog"
                title = "view the repo on Github"
                weight = 6
                [languages.en.menu.main.params]
                    class = "d-none-desktop text-center"
        [languages.en.params]
            description = "Blog for wlupus"
            keywords = ["wlupus", "blog"]

[params]
    version = "0.2.X"

[markup]
    [markup.highlight]
        noClasses = false
